<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView android:id="@+id/common_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.guillaumepayet.remotenumpad.settings.CommonSettingsFragment" />

        <FrameLayout android:id="@+id/connection_interface_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>